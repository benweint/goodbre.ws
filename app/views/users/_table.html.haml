.tab-content
  #similar-users.tab-pane.active
    %table.table.table-striped
      %tr
        %th
        %th Username
        %th Likes
        %th Dislikes
      - users.each do |user|
        %tr
          %td.gravatar-small= gravatar_image_tag(user.email, :gravatar => { :size => 100 })
          %td= link_to user.username, user_path(user.username)
          %td= user.liked_beers.count
          %td= user.disliked_beers.count

    .center
      = paginate users unless params[:action] == 'similar'
